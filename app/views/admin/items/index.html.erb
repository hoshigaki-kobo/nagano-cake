<div class="container">
  <div class="row my-5">
    <div class="col-4 text-center">
      <h2>商品一覧</h2>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>販売ステータス</th>
        </tr>
      </thead>
      <tbody>
      <%= @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to admin_item_path(item.id) do%>
              <%= item.name %>
            <% end %>
          </td>
          <td>
            <%= item.tax_included %>
          </td>
          <td>
            <%= item.genre_id %>
          </td>
          <td>
            <%= item.is_active %>
          </td>
        </tr>
        <% end %>
       </tbody>
    </table>
  </div>
</div>
<%= paginate @items %>