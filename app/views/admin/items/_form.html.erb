  <%= form_with model: item, local: true do |f| %>
    <table class="table table-borderless">
      <tr>
        <th class="form-group"><%= f.label :item_image,"商品画像" %></th>
        <td><%= f.file_field :item_image, class: "form-control-file" %></td>
      </tr>
      <tr>
        <th class="form-group"><%= f.label :name,"商品名" %></th>
        <td><%= f.text_field :name, class: "form-control"%></td>
      </tr>
      <tr>
        <th class="form-group"><%= f.label :introduction,"商品説明" %></th>
        <td><%= f.text_area :introduction, class: "form-control" %></td>
      </tr>
      <tr>
        <th class="form-group"><%= f.label :genre_id,"ジャンル" %></th>
        <td>
           <!--f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>-->
        </td>

      </tr>
      <tr>
        <th class="form-group"><%= f.label :tax_included,"税抜き価格" %></th>
        <td><%= f.number_field :tax_included %>円</td>
      </tr>
      <tr>
        <th class="form-group"><%= f.label "販売ステータス" %></th>
        <td>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中" %>
        </td>
      </tr>
    </table>
    <div class="row justify-content-center">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>
