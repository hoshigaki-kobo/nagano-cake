<h2>ジャンル一覧・追加</h2>

<div class="container">

  <%= form_with model:[:admin, @genre], local:true do |f| %>
    <%= f.label :"ジャンル名" %>
    <%#= f.text_field :name, class: 'form-control' %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録" %>
  <% end %>

  <div class="row">
    <div class="col-4">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>