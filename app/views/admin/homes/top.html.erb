<div class="container">
  <h2>注文履歴一覧</h2><br>
	<table class="table table-hover">
	  <tr class="active">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th></th>
    </tr>
    <% @order.reverse.each do |order| %>
    <tr>
      <td><%= link_to admin_order_path(order) do %>
      <%= l order.created_at %>
      <% end %>
      </td>
      <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
      <td><%= order.total_quantity %></td>
      <td><%= order.order_status %></td>

    </tr>
    <% end %>
  </table>
  <%= paginate @order %>
</div>