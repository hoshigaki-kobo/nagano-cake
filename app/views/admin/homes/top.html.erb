<div class="container takasa">
  <h2>注文履歴一覧</h2><br>
	<table class="table table-hover">
	  <tr class="active">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th></th>
    </tr>
    <% @order.each do |order| %>
    <tr>
      <td><%= l order.created_at %></td>
      <td><%= link_to "admin/order/show", admin_order_path(order) %></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td><%= order.order_status %></td>

    </tr>
    <% end %>
  </table>
  <%= paginate @order %>
</div>