<div class="container">
  <div class="text-center">

    <h4>新規会員登録</h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

　    <div class="field form-group col-xs-12">
        <%= f.label :"名前" %>
        <%= f.label :"(姓)" %>
        <%= f.text_field :first_name, autofocus: true %>
        <%= f.label :"(名)" %>
        <%= f.text_field :last_name, autofocus: true %>
　     </div>

       <div class="field form-group col-xs-12">
         <%= f.label :"フリガナ" %>
         <%= f.label :"(セイ)" %>
         <%= f.text_field :first_name_kana, autofocus: true %>
         <%= f.label :"(メイ)" %>
         <%= f.text_field :last_name_kana, autofocus: true %>
     　</div>

       <div class="field form-group col-xs-12">
         <%= f.label :"メールアドレス" %>
         <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
       </div>

       <div class="field form-group col-xs-12">
         <%= f.label :"郵便番号(ハイフンなし)" %>
         <%= f.text_field :zip_code, autofocus: true %>
       </div>

       <div class="field form-group col-xs-12">
         <%= f.label :"住所" %>
         <%= f.text_field :address, autofocus: true %>
       </div>

       <div class="field form-group col-xs-12">
         <%= f.label :"電話番号" %>
         <%= f.text_field :tel, autofocus: true %>
       </div>

       <div class="field form-group col-xs-12">
         <%= f.label :"パスワード" %>
         <%= f.password_field :password, autocomplete: "new-password" %>
       </div>

       <div class="field form-group col-xs-12">
         <%= f.label :"パスワード確認" %>
         <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
       </div>

       <div class="actions">
         <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-xs-7' %>
       </div>
    <% end %>

      <div class="row">
        <div class="offset-9">
          <%= link_to "既に会員の方はこちらからログイン", new_session_path(resource_name), class: "btn btn-sm btn-outline-danger" %>
        </div>
      </div>

  </div>
</div>
