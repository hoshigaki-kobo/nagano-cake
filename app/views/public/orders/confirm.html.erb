  <div calss = "containar">
    <div class = "row">
      <div class = "col-xs-6">
        <p><strong><h4>注文情報確認</h4></strong></p>
        <table class='table table-hover table-inverse'>
      　<thead>
           <% @cart_items.each do |cart| %>
            <td><%= cart.item.name %>商品名</td>
            <td><%#= @item_image item.XXXXpathXXXX, size:'60x60' %></td>
            <td><%= (cart.item.price).to_s(:delimited) %>単価(税込)</td>
            <td><%= cart.quantity %>数量</td>
            <td><%= (cart.item.price*cart.quantity).to_s(:delimited) %>小計</td>
            <% end %>
        </thead>
       </table>
      </div>
      <p><strong><h4>支払方法</h4></strong><%= @order.payment_method %></p><br>
		  <p><strong><h4>お届け先</h4></strong><%= @order.address %> <%#= @order.address %> <%#= @order.name %></p><br>
		  <%= form_with model: @order, url: orders_path, local: true do |f| %>
		  <div class = "col-xs-3 ">
		    <table class='table table-hover table-inverse'>
		    <tr><%= f.hidden_field :postage, :value => 800 %>送料</tr><br>
        <tr><%= f.hidden_field :xxxxxx %>商品合計</tr><br>
        <tr><%= f.hidden_field :total_amount %>請求金額</tr>
        </table>
      </div>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
        <% end %>