 <div calss = "container">
    <div class = "row">
      <div class = "col-md-6">
        <p><strong><h4>注文情報確認</h4></strong></p>
          <table align="left" class='table table-borderd'>
      　    <thead>
      　      <tr>
      　       <th>商品名</th>
      　       <th>単価(税込）</th>
      　       <th>数量</th>
      　       <th>小計</th>
      　      </tr>
            </thead>
            <tbody>
               <% @cart_items.each do |cart_item| %>
              <td><%= image_tag cart_item.item.get_item_image("100x100") %>
                  <%= cart_item.item.name %></td>
              <td><%= cart_item.item.tax_included %></td>
              <td><%= cart_item.quantity %></td>
              <td><%= (cart_item.item.tax_included*cart_item.quantity) %></td>
              <% end %>
            </tbody>
           </table>
      </div>
      <div class = "mx-auto">
        <p><strong><h4>支払方法</h4></strong><%= @order.payment_i18n %></p><br>
		    <p><strong><h4>お届け先</h4></strong><%= @order.zip_code %> <%= @order.address %> <%= @order.name %></p><br>
      </div>
		      <div class = "col-xs-3">
		      <table class='table table-hover table-inverse'>
		        <td>送料</td>
		        <th><%= @postage %></th>
		        </tr>
		        <tr>
		          <td>商品合計</td>
		          <th>
							  <%= @total %>
		          </th>
		        </tr>
		        <tr>
		          <td>請求金額</td>
		          <th><%= @total_amount %></th>
		        </tr>
		      </table>




		        <%= form_with model: @order, url: orders_path, local: true do |f| %>
		        <%= f.hidden_field :address,value: @order.address %>
		        <%= f.hidden_field :zip_code,value: @order.zip_code %>
		        <%= f.hidden_field :name,value: @order.name %>
            <%= f.hidden_field :payment,value: @order.payment %>
            <%= f.hidden_field :total_amount,value: @order.total_amount %>
            <%= f.hidden_field :order_status,value: @order.order_status, checked: "入金待ち" %>
            <%= f.submit "注文を確定する", class: "btn btn-success" %>
            <% end %>
          <!--</table>-->
          <!--</div>-->
    </div>
 </div>
