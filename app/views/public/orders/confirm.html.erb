 <div class = "container">
   <div class = "row my-3">
     <div class = "col-4 text-center">
       <h3>注文情報確認</h3>
     </div>
   </div>
   <div class = "row">
     <div class = "col-md-6">
       <table class = "table table-bordered">
         <thead class = "thead-light">
           <tr>
             <th>商品名</th>
             <th>単価(税込)</th>
             <th>数量</th>
             <th>小計</th>
           </tr>
         </thead>
         <tbody>
           <% @cart_items.each do |cart_item| %>
           <tr>
             <td><%= cart_item.item.name %></td>
             <td><%= cart_item.item.tax_included %></td>
             <td><%= cart_item.quantity %></td>
             <td><%= (cart_item.item.tax_included*cart_item.quantity) %></td>
           </tr>
           <% end %>
         </tbody>
       </table>
     </div>
     <div class ="col-md-4">
       <table class = "table table-bordered">
         <tr>
           <th>送料</th>
           <td><%= @postage %></td>
         </tr>
         <tr>
           <th>商品合計</th>
           <td><%= @total %></td>
         </tr>
         <tr>
           <th>請求金額</th>
           <td><%= @total_amount %></td>
         </tr>
       </table>
     </div>
    </div>
    <div class = "row">
      <div class = "col-12">
       <table class = "table table-borderless">
         <tr>
           <th>支払方法</th>
           <td><%= @order.payment %></td>
         </tr>
         <tr>
           <th>お届け先</th>
           <td><%= @order.zip_code %> <%= @order.address %> <%= @order.name %></td>
         </tr>
       </table>
     </div>
    </div>
    <div class = "row justify-content-center">
      <%= form_with model: @order, url: orders_path, local: true do |f| %>
        <%= f.hidden_field :@postage %>
        <%= f.hidden_field :@total %>
        <%= f.hidden_field :@total_amount %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
 </div>
